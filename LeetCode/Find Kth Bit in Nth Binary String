class Solution(object):
    def findKthBit(self, n, k):
        """
        :type n: int
        :type k: int
        :rtype: str
        """
        if n == 1: 
            return "0"
        
        mid = 2**(n-1)
        if k == mid: return "1"
        if k < mid:
            return self.findKthBit(n-1, k)
        else:
            return "1" if self.findKthBit(n-1, 2*mid-k) == "0" else "0"
