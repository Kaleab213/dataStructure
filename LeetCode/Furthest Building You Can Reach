class Solution:
    def furthestBuilding(self, heights: List[int], bricks: int, ladders: int) -> int:
        n = len(heights)
        store = []  
        for i in range(n-1):
            val = heights[i+1]-heights[i]
            if val > 0:
                heapq.heappush(store, val)
                if len(store) > ladders:
                    bricks -= heapq.heappop(store)
                if bricks < 0:
                    return i
        return len(heights) - 1
               
